.current-task
  &-title
    display inline-block
    margin 0
    margin-top 5px
    padding-left 10px
    color gold
    font-size 2.5em
    background-color midnightblue

.subtask
  margin 0
  margin-top 5px
  margin-left 20px
  max-width 400px
  
  
  font-size 1em
  text-align left
  text-decoration none
  transition text-decoration 1s ease-in-out
  
  &:hover
    cursor pointer
  
.cross-out
  text-decoration line-through

.task-list
  width 100%

  &-btn
    width 70px
    font-size 1.2rem
  
  &-filler
    width 70px
    height 38px
    background-color skyblue
    color midnightblue
    font-size 1.6rem

  &-item
    height 45px
    width 100%
    margin-top 5px
    background-color midnightblue
    
    &-info
      position relative
      left 20px

    &-title
      margin 0
      padding 0
      color gold

      text-align left
      &:hover
        cursor default

.new-task-form
  width 100%
  
  .col
    width 100%
  
  &-info
    display inline-block
    height 23px
    padding 5px
    padding-top 10px
    background-color midnightblue
    color gold
    &:hover
      cursor default
  
  input
    border none
    padding 5px
  &-field
    &-title
      font-size 1.4em
      width 50%
    &-subtask
      font-size 0.8em
  div .new-task-form-field-title
    border-bottom 1px solid #ccc

.completion-mark
  position relative
  float none
  min-width 21px
  font-size 1.5em

.completion-mark-container
    float left
    padding-left 5%
    min-width 20%
    max-height 78px

    color midnightblue
