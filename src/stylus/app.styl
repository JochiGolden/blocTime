@import 'animate.styl'

body
  background-color skyblue
  color midnightblue

.main
  width 550px
  padding-top 50px
  color midnightblue
  font 1em "Roboto Slab", sans-serif
  font-weight 300
  border-radius 3px
  
.heading
  float left
  padding 5px
  margin 10px 0 0 0
  
  font-weight 300
  color beige
  background-color midnightblue

.timer
  position relative
  width 100%
  margin 0% 0% 0% 23%
  z-index -2

  &-digit  
    float left
    min-width 40px

    font-size 5em
    font-weight 700
    color crimson

  &-colon
    float left
    min-width 15px
    padding 15px
    font 3em Impact

.current-task
  margin-top 10%

  &-title
    padding 5px

    color gold
    font-size 2.5em

    &:hover
      cursor default

.subtask
  padding 0px
  margin 1% 0% 0% 7%
  max-width 400px
  
  font-size 1em
  text-align left

.task-list
  padding 5% 0
  margin-left 15px
  
  &-btn
    float left
    width 70px
    font-size 0.8em

  &-item
    margin-left -45px
    
    &-title
      float left
      overflow hidden
      min-height 2em
      margin 0
      padding 0

      text-align left
      &:hover
        cursor default

.new-task-form
  margin-left 0
  &-field
    margin 0
    &-title
      font-size 1.4em
      width 75%
      padding 5px

    &-subtask
      font-size 0.8em
      width 75%
      padding 5px

.completion-mark
  position relative
  float none
  min-width 21px
  font-size 1.5em

.completion-mark-container
    float left
    padding-left 5%
    min-width 20%
    max-height 78px

    color midnightblue
    
.btn
  float left
  
  &-select, &-select-stopped
    width 50%
    height 160px
    float none
    z-index 2
    position relative
    text-align center
    padding-top 20%
    margin-left 20%

    color beige
    letter-spacing 1.5px
    font-size 1.2em
    
    color midnightblue
    border 5px solid gold
    background-color initial
    
    &-stopped
      border 5px solid midnightblue
      border-radius 3px
      background-color rgba(0, 0, 100, 0.6)
      &:hover
        cursor pointer
        color midnightblue
        border 5px solid gold
        background-color initial

  &-tool

    height 6%

    color beige
    font-size 1.2em

    border none
    background-color midnightblue
    transition background-color 200ms color 200ms

    &:hover
      cursor pointer
      background-color gold
      color midnightblue
      transition background-color 200ms color 200ms

  &-disabled
    color lightgray
    font-size 1em

    border none
    background-color gray
    cursor default

/*****************************************/
/* General                               */
/*****************************************/

.flex-row
  display flex
  justify-content center

.icon
  font-size 1.2em

  background-color initial
  border-radius 50%

.hide
  display none

.bound
