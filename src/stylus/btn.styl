.btn
  float left
  
  &-select, &-select-stopped
    width 400px
    height 150px
    float none
    z-index 2
    position relative
    text-align center
    padding-top 20%

    color beige
    letter-spacing 1.5px
    font-size 1.2em
    
    color gold
    border 5px solid gold
    background-color initial
    
    &-stopped
      border 5px solid midnightblue
      border-radius 3px
      background-color rgba(0, 0, 100, 0.6)
      &:hover
        cursor pointer
        color midnightblue
        border 5px solid gold
        background-color initial

  &-tool

    height 38px
    width 40px

    color beige
    font-size 1.2em

    border none
    background-color midnightblue
    transition background-color 200ms, color 200ms

    &:hover
      cursor pointer
      background-color gold
      color midnightblue
      transition background-color 200ms, color 200ms
    
  &-new-task
    margin-top 5px
    text-align left
    font-family "Roboto Slab", sans-serif
    font-weight 300
    width 400px

  &-disabled
    color lightgray
    font-size 1em

    border none
    background-color gray
    cursor default